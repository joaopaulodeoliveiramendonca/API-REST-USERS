{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "api/dist",
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src"]
}
